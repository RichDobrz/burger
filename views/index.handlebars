<h1> Burgers!</h1>

<div id="burgerContainer" class="container">
    <img src="/img/burger.png" alt="">
    <h2>Burgers Ready:</h2>

    <div>
        {{#each burgers }}
            {{#unless devoured }}
                {{> burgers/burger-block devoured=false }}
            {{/unless }}
        {{/each }}
    </div>
</div>


    <div class="devouredBurgs">
        <h2>Burgers you devoured:</h2>

        {{#each burgers }}
            {{#if devoured }}
                {{> burgers/burger-block devoured=true }}
            {{/if }}
        {{/each }}
    </div>

    <div id="addBurgerContainer" class="container">
        <h2>Add a Burger</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="burgerName"></label>
                <input type="text" id="burgerName" name="burgerName">
            </div>
            <button type="submit" class="submit">Add a Burger</button>
        </form>
    </div>

